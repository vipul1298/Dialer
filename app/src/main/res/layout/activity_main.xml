<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    android:gravity="bottom"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:textColor="#000"
        android:id="@+id/text"
        android:textSize="30dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/one"
            android:textColor="#fff"
            android:text="1"
            android:textSize="30dp"
            android:layout_width="0dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/two"
            android:textColor="#fff"
            android:text="2"
            android:textSize="30dp"
            android:layout_width="0dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/three"
            android:textColor="#fff"
            android:text="3"
            android:textSize="30dp"
            android:layout_width="0dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/four"
            android:textColor="#fff"
            android:text="4"
            android:textSize="30dp"
            android:layout_width="0dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/five"
            android:textColor="#fff"
            android:text="5"
            android:textSize="30dp"
            android:layout_width="0dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/six"
            android:textColor="#fff"
            android:text="6"
            android:textSize="30dp"
            android:layout_width="0dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/seven"
            android:textColor="#fff"
            android:text="7"
            android:textSize="30dp"
            android:layout_width="0dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/eight"
            android:textColor="#fff"
            android:text="8"
            android:textSize="30dp"
            android:layout_width="0dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/nine"
            android:textColor="#fff"
            android:text="9"
            android:textSize="30dp"
            android:layout_width="0dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/astc"
            android:textColor="#fff"
            android:text="*"
            android:textSize="30dp"
            android:layout_width="0dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/zero"
            android:textColor="#fff"
            android:text="0"
            android:textSize="30dp"
            android:layout_width="0dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/hash"
            android:textColor="#fff"
            android:text="#"
            android:textSize="30dp"
            android:layout_width="0dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/call"
            android:gravity="center"
            android:textSize="30dp"
            android:drawableRight="@drawable/ic_call_black_24dp"
            android:layout_width="0dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/backspace"
            android:drawableBottom="@drawable/ic_backspace_black_24dp"
            android:text="0"
            android:textSize="30dp"
            android:layout_width="0dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/msg"
            android:drawableLeft="@drawable/ic_chat_black_24dp"
            android:textSize="30dp"
            android:layout_width="0dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>